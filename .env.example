# Server Configuration
PORT=3000
HOST=localhost
SESSION_SECRET=your-session-secret

# Twitch Configuration
# TWITCH_USERNAME is optional if using OAuth flow - it will be determined from the token
TWITCH_USERNAME=your_bot_username
TWITCH_OAUTH_TOKEN=oauth:your_oauth_token
TWITCH_CHANNELS=channel1,channel2

# Twitch App Credentials (for OAuth flow)
# Get these values from your Twitch Developer Console
TWITCH_CLIENT_ID=your_client_id
TWITCH_REDIRECT_URI=http://localhost:3000/auth/twitch/callback

# Logging Configuration
LOG_LEVEL=info 