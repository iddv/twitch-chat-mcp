# MCP Server Configuration
NODE_ENV=development
LOG_LEVEL=info

# Twitch Configuration
# TWITCH_USERNAME is optional if using OAuth flow - it will be determined from the token
TWITCH_USERNAME=your_bot_username

# TWITCH_OAUTH_TOKEN is optional if using browser auth flow
# Format: oauth:your_oauth_token (include the oauth: prefix)
TWITCH_OAUTH_TOKEN=oauth:your_oauth_token

# Comma-separated list of channels to join by default
TWITCH_CHANNELS=channel1,channel2

# Twitch App Credentials (Required for OAuth flow)
# Get these values from your Twitch Developer Console at https://dev.twitch.tv/console
TWITCH_CLIENT_ID=your_client_id

# OAuth redirect URI (only needed if using web-based OAuth)
TWITCH_REDIRECT_URI=http://localhost:3000/auth/twitch/callback

# Server Configuration (for OAuth web server)
PORT=3000
HOST=localhost 