{
  "name": "twitch-chat-mcp",
  "version": "0.1.0",
  "description": "MCP server for connecting Claude desktop with Twitch chat",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "setup": "node scripts/setup-env.js",
    "mcp:start": "node scripts/start-mcp-server.js",
    "mcp:test": "node scripts/test-mcp-connection.js",
    "mcp:build": "npm run build && echo 'MCP server ready for client connection'",
    "permissions": "npm run build && node scripts/check-permissions.js",
    "test:permissions": "npm run build && node scripts/test-permissions.js",
    "docker:setup": "./scripts/setup-local-docker.sh",
    "docker:build": "docker build -t twitch-chat-mcp .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f twitch-chat-mcp",
    "docker:clean": "docker-compose down && docker rmi twitch-chat-mcp"
  },
  "keywords": [
    "twitch",
    "claude",
    "mcp",
    "chat"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-crypto/client-node": "^4.2.1",
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "open": "^9.1.0",
    "sqlite3": "^5.1.7",
    "tmi.js": "^1.8.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-cloudwatch": "^6.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/tmi.js": "^1.8.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
